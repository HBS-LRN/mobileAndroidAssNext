<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginTabFragment">

    <fragment
        android:id="@+id/loginTabFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.LoginTabFragment"
        android:label="fragment_login_tab"
        tools:layout="@layout/fragment_login_tab" >
        <action
            android:id="@+id/action_loginTabFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loginTabFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_loginTabFragment_to_signupTabFragment"
            app:destination="@id/signupTabFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/mainFragment_to_eventFragment2"
            app:destination="@id/eventFragment2" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventFragment2"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.EventFragment"
        android:label="EventFragment"
        tools:layout="@layout/fragment_event_tab">
        <action
            android:id="@+id/action_eventFragment2_to_eventDetailsActivity"
            app:destination="@id/eventDetailsActivity" />
        <action
            android:id="@+id/action_eventFragment2_to_ongoingFragment"
            app:destination="@id/ongoingFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventDetailsActivity"
        android:name="com.example.bait2073mobileapplicationdevelopment.Event.EventDetailsActivity"
        android:label="EventDetailsActivity"
        tools:layout="@layout/activity_event_details"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.ProfileFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.ChangePasswordFragment"
        android:label="ChangePasswordFragment"
        tools:layout="@layout/fragment_change_password"/>
    <fragment
        android:id="@+id/ongoingFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.OngoingFragment"
        android:label="OngoingFragment"
        tools:layout="@layout/fragment_ongoing">
        <action
            android:id="@+id/action_ongoingFragment_to_eventDetailsActivity"
            app:destination="@id/eventDetailsActivity"
            />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/requestBmiActivity"
        android:name="com.example.bait2073mobileapplicationdevelopment.profile.RequestBmiActivity"
        android:label="RequestBmiActivity"
        tools:layout="@layout/acitvity_request_bmi"
        />
    <fragment
        android:id="@+id/requestGenderActivity"
        android:name="com.example.bait2073mobileapplicationdevelopment.profile.RequestGenderActivity"
        android:label="RequestGenderActivity"
        tools:layout="@layout/activity_request_gender">
        <action
            android:id="@+id/action_requestGenderActivity_to_requestBmiActivity"
            app:destination="@id/requestBmiActivity"
            />
    </fragment>
    <fragment
        android:id="@+id/signupTabFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.SignupTabFragment"
        android:label="fragment_signup_tab"
        tools:layout="@layout/fragment_signup_tab" >
        <action
            android:id="@+id/action_signupTabFragment_to_requestGenderActivity"
            app:destination="@id/requestGenderActivity" />
    </fragment>
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.bait2073mobileapplicationdevelopment.fragment.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report" />
</navigation>