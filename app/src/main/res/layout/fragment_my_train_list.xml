            android:layout_height="560dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/myTrainPlanBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="false"
                android:animationCache="false"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="0dp"
                android:paddingBottom="10dp"
                app:cardElevation="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/planImg"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/img_plan" />

                    <LinearLayout
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/planTitletxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan 1"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/qtyPlantxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 exercise" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/selectBtnBox"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/selectionBtn"
                            android:layout_width="10dp"
                            android:layout_height="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/selectionicon" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

