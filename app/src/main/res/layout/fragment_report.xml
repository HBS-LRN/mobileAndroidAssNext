<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context="com.example.bait2073mobileapplicationdevelopment.screens.report.UserReport.UserReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHeight_max="900dp"

        >


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/lavender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"


            />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="69dp"
            android:text="Reports"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





        <androidx.cardview.widget.CardView
            android:id="@+id/welcomeView"
            android:layout_width="match_parent"
            android:layout_height="110dp"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"

                >






                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_electric_bolt_24" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_local_fire_department_24" />
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_timer_24" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="39dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:text="16"
                    android:textSize="30sp"
                    android:background="@drawable/border_right"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:text="16"
                    android:textSize="30sp"
                    android:background="@drawable/border_right"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:text="02:34"
                    android:textSize="30sp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="80dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Workouts"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/titleSubFont"


                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Kcal"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/titleSubFont" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Durations"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/titleSubFont" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/history"
            android:layout_width="match_parent"


            android:layout_height="180dp"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="29dp"
            app:cardElevation="12dp"
            android:layout_marginTop="50dp"


            app:layout_constraintTop_toBottomOf="@+id/welcomeView">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="History"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/nextHistory"

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"


                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_next_highlight" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="105dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SUN"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MON"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TUE"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WED"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="THUR"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FRI"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SAT"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="16sp"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/monthYearTV"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:text="Feb 2021"
                    android:textSize="20sp"
                    android:layout_marginTop="70dp"
                    android:textColor="@color/black"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calendarRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="130dp"


                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/heightCardView"
            android:layout_width="match_parent"


            android:layout_height="130dp"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="29dp"
            app:cardElevation="12dp"
            android:layout_marginTop="50dp"


            app:layout_constraintTop_toBottomOf="@+id/history">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="Height (cm)"
                    android:textSize="25sp" />





                <ImageView
                    android:id="@+id/heightImageView"

                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"


                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="19dp"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/rp_ic_edit_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"

                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="40dp"

                    android:fontFamily="@font/poppins_medium"
                    android:text="Edit"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/titleSubFont" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_medium"
                    android:text="Current:"
                    android:textColor="@color/gray"
                    android:textSize="21sp"
                    android:layout_alignParentBottom="true"

                    android:layout_marginStart="22dp"
                    android:layout_marginBottom="15dp"
                    />


                <TextView
                    android:id="@+id/height_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"

                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="50dp"


                    android:fontFamily="@font/poppins_medium"
                    android:text="175.0"
                    android:textColor="@color/gray"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"

                    android:layout_marginStart="12dp"
                    android:layout_marginTop="85dp"

                    android:layout_marginEnd="20dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="CM"
                    android:textColor="@color/gray"
                   />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/weightCardView"
            android:layout_width="match_parent"


            android:layout_height="130dp"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="29dp"
            app:cardElevation="12dp"
            android:layout_marginTop="40dp"

            app:layout_constraintTop_toBottomOf="@+id/heightCardView">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="Weight (kg)"
                    android:textSize="25sp" />





                <ImageView
                    android:id="@+id/weightImageView"

                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"


                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="19dp"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/rp_ic_edit_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"

                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="40dp"

                    android:fontFamily="@font/poppins_medium"
                    android:text="Edit"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/titleSubFont" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_medium"
                    android:text="Current:"
                    android:textColor="@color/gray"
                    android:textSize="21sp"
                    android:layout_alignParentBottom="true"

                    android:layout_marginStart="22dp"
                    android:layout_marginBottom="15dp"
                    />


                <TextView
                    android:id="@+id/weight_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"

                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="50dp"


                    android:fontFamily="@font/poppins_medium"
                    android:text="45.0"
                    android:textColor="@color/gray"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"

                    android:layout_marginStart="12dp"
                    android:layout_marginTop="85dp"

                    android:layout_marginEnd="20dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="KG"
                    android:textColor="@color/gray"
                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/BMIcardView"
            android:layout_width="match_parent"


            android:layout_height="410dp"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="29dp"
            app:cardElevation="12dp"
            android:layout_marginTop="40dp"

            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weightCardView">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="BMI (kg/m²)"
                    android:textSize="25sp" />





                <ImageView
                    android:id="@+id/editBmiClick"

                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"


                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="19dp"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/rp_ic_edit_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"

                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="40dp"

                    android:fontFamily="@font/poppins_medium"
                    android:text="Edit"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/titleSubFont" />


                <TextView
                    android:id="@+id/bmi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:textSize="21sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="17dp"
                    android:text="Your BMI = "


                    android:textColor="@color/gray"
                    />


                <TextView
                    android:id="@+id/bmi_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginStart="2dp"
                    android:layout_marginTop="80dp"
                    android:layout_toEndOf="@+id/bmi_text"

                    android:textColor="@color/gray"
                    android:textSize="21sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginTop="80dp"

                    android:layout_marginStart="2dp"
                    android:text="(kg/m²) "
                    android:layout_toEndOf="@+id/bmi_edit"
                    android:textColor="@color/gray"
                    android:textSize="21sp" />


                <ImageView
                    android:id="@+id/overallObesityImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="200dp"


                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/img_overall_obesity" />


                <TextView
                    android:id="@+id/bmi_consider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:textSize="21sp"
                    android:layout_marginTop="140dp"
                    android:layout_marginStart="17dp"
                    android:text="You Are   = "


                    android:textColor="@color/gray"
                    />

                <TextView
                    android:id="@+id/bmi_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginStart="2dp"
                    android:layout_marginTop="130dp"
                    android:layout_toEndOf="@+id/bmi_consider"
                    android:text="Normal"

                    android:textSize="21sp"
                    android:padding="7dp"


                    />

                <!--                <com.example.bait2073mobileapplicationdevelopment.utilities.CustomSeekBarUtils-->
<!--                    android:id="@+id/customSeekBar"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:max="100"-->
<!--                    android:progress="0"-->
<!--                    android:progressDrawable="@android:color/transparent"-->
<!--                    android:thumb="@drawable/seek_thumb_normal"-->
<!--                    android:thumbOffset="12dp" />-->







            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>