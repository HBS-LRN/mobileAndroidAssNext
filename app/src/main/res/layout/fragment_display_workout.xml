        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        >

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00000000"
            android:iconifiedByDefault="false"
            android:queryBackground="@color/transparent"
            android:queryHint="Search Workout..."

            />

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@+id/cardview">

        <androidx.cardview.widget.CardView

            android:id="@+id/workOutCardView"
            android:layout_width="match_parent"
            android:layout_height="170dp"


            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/border_black_bottom"


                android:orientation="horizontal">


                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="151dp"
                    android:layout_height="155dp"
                    android:src="@drawable/gif_exercise_squat"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-6dp"
                    android:layout_marginTop="26dp"
                    android:layout_weight="5.0"
                    android:orientation="vertical"


                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="15dp"

                        android:fontFamily="@font/poppins_bold"
                        android:text="Squat With Standing Position"
                        android:textSize="16sp" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="30 Seconds"
                        android:textColor="@color/dialog_color_2"
                        android:textSize="@dimen/titleSubFont" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:layout_weight="2.0"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_width="60dp"
                            android:layout_height="33dp"


                            android:layout_alignParentRight="true"

                            android:layout_marginTop="20dp"


                            android:layout_marginEnd="30dp"
                            android:src="@drawable/ic_icon_tts_play" />


                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

