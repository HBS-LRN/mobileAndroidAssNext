<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.fragment.play_plan">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView2"
        android:layout_width="390dp"
        android:layout_height="299dp"

        android:layout_marginStart="12dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/gif_exercise_squat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/exeNametxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Squat"
        android:textAlignment="center"
        android:textColor="#939393"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timerCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="00:20"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pauseBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="PAUSE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/previousBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/transparent"
            android:drawableLeft="@android:drawable/ic_media_previous"
            android:text="Previous"
            android:textColor="#706F6F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/skipBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@color/transparent"
            android:drawableRight="@android:drawable/ic_media_next"
            android:text="Skip"
            android:textColor="#706F6F"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>